{
  "name": "mindload-firebase-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for MindLoad IAP verification and entitlements",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test-build": "node test-deploy.js"
  },
  "engines": {
    "node": ">=20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^5.1.1",
    "openai": "^5.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.0"
  }
}
