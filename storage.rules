rules_version = '2';

// Firebase Storage Rules for Mindload App
// Comprehensive security rules for document uploads and user data
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidDocumentType() {
      return request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('text/.*') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.wordprocessingml.document') ||
             request.resource.contentType.matches('application/epub\\+zip') ||
             request.resource.contentType.matches('application/x-mobipocket-ebook') ||
             request.resource.contentType.matches('application/rtf') ||
             request.resource.contentType.matches('application/msword');
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/(jpeg|jpg|png|gif|webp)');
    }
    
    // User documents folder - strict user-specific access
    match /documents/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
      
      // File uploads with size and type validation
      allow create: if isOwner(userId)
        && request.resource.size < 50 * 1024 * 1024  // 50MB limit
        && isValidDocumentType();
    }
    
    // Profile images - users can upload their own avatars
    match /profiles/{userId}/avatar/{fileName} {
      allow read: if true; // Profile images are publicly readable
      allow write: if isOwner(userId)
        && request.resource.size < 5 * 1024 * 1024  // 5MB limit
        && isValidImageType();
    }
    
    // Shared study materials (for public study sets)
    match /shared/{allPaths=**} {
      allow read: if true; // Public read access for shared materials
      allow write: if isAuthenticated(); // Only authenticated users can share
    }
    
    // App assets and branding
    match /assets/{allPaths=**} {
      allow read: if true; // Public read for app assets
      allow write: if false; // Admin SDK only
    }
    
    // Temporary uploads (for processing)
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
      // Temp files auto-expire after 24 hours
    }
    
    // System and admin files
    match /system/{allPaths=**} {
      allow read, write: if false; // Admin SDK only
    }
    
    // Backup and analytics data
    match /backups/{allPaths=**} {
      allow read, write: if false; // System only
    }
    
    // Default deny rule for security
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}